<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="multi.platform.auth.shared.external.enums.AuthType" />

        <variable
            name="authConfig"
            type="multi.platform.auth.shared.external.AuthConfig" />

        <variable
            name="vm"
            type="multi.platform.auth.shared.app.signin.SignInViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="24dp"
                android:paddingTop="50dp"
                android:paddingEnd="24dp"
                android:paddingBottom="20dp">

                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="?attr/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mtv_title"
                    style="@style/TextAppearance.MaterialComponents.Headline6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="42dp"
                    android:text=""
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_logo" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mtv_subtitle"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/signin_subtitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mtv_title" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mtv_subtitle">

                    <include
                        android:id="@+id/phone_form"
                        layout="@layout/signin_phone_form_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility=""
                        app:layout_constraintTop_toTopOf="parent"
                        bind:vm="" />

                    <include
                        android:id="@+id/email_form"
                        layout="@layout/signin_email_form_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility=""
                        app:layout_constraintTop_toTopOf="parent"
                        bind:authConfig=""
                        bind:vm="" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mtv_or"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="56dp"
                    android:text="@string/signin_or"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cl_form" />

                <View
                    android:id="@+id/left_or_line"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginEnd="34dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintBottom_toBottomOf="@+id/mtv_or"
                    app:layout_constraintEnd_toStartOf="@+id/mtv_or"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/mtv_or" />

                <View
                    android:id="@+id/right_or_line"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="34dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintBottom_toBottomOf="@+id/mtv_or"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/mtv_or"
                    app:layout_constraintTop_toTopOf="@+id/mtv_or" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mtv_or">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/mb_google"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick=""
                        android:visibility=""
                        app:icon="@drawable/common_google_signin_btn_icon_light"
                        app:iconTint="@null"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/mb_facebook"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:onClick=""
                        android:visibility=""
                        app:icon="@drawable/com_facebook_button_icon"
                        app:layout_constraintStart_toEndOf="@id/mb_google"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/mb_biometric"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:onClick=""
                        app:icon="@drawable/ic_fingerprint"
                        app:iconTint="@null"
                        app:layout_constraintStart_toEndOf="@id/mb_facebook"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/mb_toggle"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:onClick=""
                        app:icon=""
                        app:iconTint="@null"
                        app:layout_constraintStart_toEndOf="@id/mb_biometric"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <include
            android:id="@+id/loading_view"
            layout="@layout/auth_loading_view" />

    </RelativeLayout>

</layout>