<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/auth"
    app:startDestination="@id/signInFragment">
    <fragment
        android:id="@+id/signInFragment"
        android:name="tossaro.android.auth.app.signin.SignInFragment"
        android:label="SignInFragment">
        <deepLink app:uri="android-app://app.tossaro.dev/sign-in" />
    </fragment>
    <dialog
        android:id="@+id/otpDialogFragment"
        android:name="tossaro.android.auth.app.otp.OtpDialogFragment"
        android:label="OtpDialogFragment">
        <deepLink app:uri="android-app://app.tossaro.dev/otp/{type}/{country}/{phone}/{duration}/{ticketId}" />
    </dialog>
</navigation>